<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.goodibunakov.cartoonquiz.MainActivityFragment"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="116dp"
        app:srcCompat="@drawable/q10" />

    <ImageView
        android:id="@+id/cartoon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/btn_clicked__bambi" />

    <ImageView
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_101_dalmatinec" />

    <ImageView
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_start" />

    <ImageView
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_start" />

    <ImageView
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="center"
        android:src="@drawable/btn_start" />

</LinearLayout>